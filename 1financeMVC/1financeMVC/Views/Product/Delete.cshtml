@model _1financeMVC.ProductDto.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="text-center mt-4">Delete Product</h1>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center">Are you sure you want to delete this product?</h3>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Details</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Product ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductId)</dd>

                        <dt class="col-sm-4">Product Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                        <dt class="col-sm-4">Quantity:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.quantity)</dd>

                        <dt class="col-sm-4">Price:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.price)</dd>

                        <dt class="col-sm-4">Category ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CatId)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="DeleteProduct" asp-route-id="@Model.ProductId" method="post" class="mt-3">
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="GetAllProducts" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
